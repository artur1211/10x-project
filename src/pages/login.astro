---
import Layout from "@/layouts/Layout.astro";
import { LoginForm } from "@/components/auth/LoginForm";

// Redirect to /generate if user is already authenticated
const { user } = Astro.locals;
if (user) {
  return Astro.redirect("/generate");
}

// Get redirect parameter from URL
const redirectTo = Astro.url.searchParams.get("redirect") || undefined;
---

<Layout title="Login - 10x Flashcards">
  <main class="mx-auto max-w-2xl px-4 py-12 sm:px-6 lg:px-8">
    <div class="space-y-8">
      {/* Header */}
      <div class="space-y-2 text-center">
        <h1 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-gray-100">Welcome Back</h1>
        <p class="text-gray-600 dark:text-gray-400">Log in to continue your learning journey</p>
      </div>

      {/* Login Form */}
      <div
        class="rounded-lg border border-gray-200 bg-white p-6 shadow-sm dark:border-gray-800 dark:bg-gray-950 sm:p-8"
      >
        <LoginForm client:load redirectTo={redirectTo} />
      </div>
    </div>
  </main>
</Layout>
